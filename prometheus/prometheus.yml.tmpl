global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: "monitoring-stack"
    environment: "${ENV}"
    cluster: "monitoring"

# Rule files
rule_files:
  - "/etc/prometheus/rules/*.yml"

# Alertmanager configuration
alerting:
  alertmanagers:
    - scheme: https
      basic_auth:
        username: "${ALERTMANAGER_USERNAME}"
        password: "${ALERTMANAGER_PASSWORD}"
      tls_config:
        insecure_skip_verify: true
      static_configs:
        - targets:
            - "alertmanager:9093"